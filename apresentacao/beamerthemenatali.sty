\mode<presentation>

\usecolortheme{beaver}%define some colors, between then the color of title box
\useinnertheme{circles}%for the contents, define the shape of bullets
\useoutertheme[subsection=false,footline=authortitle]{miniframes}%define the shape
%of sections of the header (the others are bad)

\setbeamertemplate{footline}%show slide number on all slides but the first
{%
  \ifnum\c@framenumber=1
  \else
    \begin{beamercolorbox}[wd=0.95\paperwidth,right,dp=2ex]{page number}
      \insertframenumber/\inserttotalframenumber
    \end{beamercolorbox}
  \fi%
  \begin{beamercolorbox}[colsep=1.25pt]{lower separation line foot}
  \end{beamercolorbox}
}

\setbeamerfont{block title}{size={}}

%defining some beautiful colors
\definecolor{darkpurple}{rgb}{0.471,0.008,0.412}
\definecolor{middlepurple}{rgb}{0.663,0.012,0.580}
\definecolor{lightpurple}{rgb}{0.855,0.016,0.749}
\definecolor{gold}{RGB}{254,232,0}
\definecolor{nyupurple}{RGB}{90, 35, 140}
\definecolor{lightnyupurple}{RGB}{159, 120, 184}
\definecolor{barcolor}{HTML}{FE8F18}
\definecolor{crimson}{HTML}{a30000}
\definecolor{bb}{HTML}{F2E6E6}% cor fundo 

%separations: lower head and foot lines
%\setbeamercolor{lower separation line head}{bg=black} 
\setbeamercolor{lower separation line foot}{bg=crimson} 

%color of some specifc parts of text
\setbeamercolor{alerted text}{fg=nyupurple}
\setbeamercolor{example text}{fg=darkgray}

%color block
\setbeamercolor{block body}{bg=bb}%normal text.bg!90!black}
\setbeamercolor{block title}{bg=crimson, fg=white}

%color number of itens
\setbeamercolor{item projected}{fg=crimson}

%color of itens and captions
\setbeamertemplate{itemize item}{\color{crimson}$\blacksquare$}
\setbeamertemplate{enumerate item}{\color{crimson}$\bullet$}
\setbeamertemplate{caption}[numbered]
\setbeamercolor{section number projected}{bg=crimson,fg=white}
\setbeamercolor{subsection number projected}{bg=crimson,fg=white}
\setbeamercolor{caption name}{fg=crimson}

%chance the color of the background and text
%\setbeamercolor{normal text}{bg=white,fg=yellow}

%if there is a subsections they will appear at head with this colors
\setbeamercolor*{palette secondary}{fg=white,bg=gray}%subsection
\setbeamercolor*{palette tertiary}{fg=white,bg=crimson}%section

%color of titles
\setbeamercolor{title}{fg=crimson}%Title of presentation
\setbeamercolor{section title}{fg=crimson, bg=green}
\setbeamercolor{subsection title}{fg=white, bg=gray}
\setbeamercolor{frametitle}{fg=crimson, bg=bb}

%size of titles
\setbeamerfont{frametitle}{size=\small}
\setbeamerfont{frametitle}{series=\bfseries}

%shadowing blocks
\setbeamertemplate{blocks}[rounded][shadow=true] 

%bullets
\setbeamertemplate{items}[triangle]
\setbeamercolor{item}{fg=crimson, bg=white}

\setbeamercovered{transparent}

\mode
<all>
